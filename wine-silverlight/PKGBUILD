_upname="wine-${pkgver}"

# Uncomment the line below if you want wine installed to /opt/wine-silverlight instead of replacing wine
#customprefix=1

if [[ $customprefix != 1 ]]; then
  _prefix="usr"
  _sysconf="etc"
  conflicts=('wine')
  provides=('wine=${pkgver}')
else
  # change _prefix if you don't want to use the default custom prefix of /opt/wine-silverlight
  _prefix="opt/$pkgname"
  _sysconf="$_prefix/etc"
fi

build() {
  cd "$srcdir"




  # ncurses fix
  sed -i 's|libncurses|libncursesw|g' "$srcdir/$_upname/configure"
  sed -i 's|lncurses|lncursesw|g' "$srcdir/$_upname/configure" 

  # Get rid of old build dirs
  rm -rf $pkgname-{32,64}-build
  mkdir $pkgname-32-build

  # These additional CPPFLAGS solve FS#27662 and FS#34195
  export CPPFLAGS="${CPPFLAGS/-D_FORTIFY_SOURCE=2/} -D_FORTIFY_SOURCE=0"

  cd "$srcdir"/"${_upname}"

  patch -p1 <../0001-ws2_32-Ask-the-server-to-process-unsupported-WSAIoct.patch
  patch -p1 <../0002-server-Implement-an-interface-change-notification-ob.patch
  patch -p1 <../0003-ws2_32-Add-an-interactive-test-for-interface-change-.patch
  patch -p1 <../0004-server-Store-and-return-security-attributes-with-ext.patch
  patch -p1 <../0005-ntdll-Inherit-security-attributes-from-parent-direct.patch
  patch -p1 <../0006-kernel32-Allow-string-comparison-with-linguistic-cas.patch
  patch -p1 <../0007-winex11-Update-gl_drawable-for-embedded-windows.patch
  patch -p1 <../0008-winex11-Enable-disable-windows-when-they-are-un-mapped.patch
  patch -p1 <../0009-kernel32-Change-return-value-of-stub-SetNamedPipeHandl.patch
  patch -p1 <../0010-winmm-Load-winealsa-if-winepulse-is-found.patch
  patch -p1 <../0011-winepulse-Add-initial-stub-for-pulseaudio-support.patch
  patch -p1 <../0012-winepulse-Add-format-and-period-probing.patch
  patch -p1 <../0013-winepulse-Add-audioclient.patch
  patch -p1 <../0014-winepulse-Add-IAudioRenderClient-and-IAudioCaptureCl.patch
  patch -p1 <../0015-winepulse-Add-IAudioClock-and-IAudioClock2.patch
  patch -p1 <../0016-winepulse-Add-audiostreamvolume.patch
  patch -p1 <../0017-winepulse-Add-session-support.patch
  patch -p1 <../0018-fix-fdels-trailing-whitespaces.patch
  patch -p1 <../0019-winepulse-v12.patch
  patch -p1 <../0020-winepulse-v15-Add-support-for-missing-formats-and-si.patch
  patch -p1 <../0021-winepulse-v16-Add-official-warning-wine-doesn-t-want.patch
  patch -p1 <../0022-winepulse-v17-Fix-winmm-tests.patch
  patch -p1 <../0023-winepulse-v18-Latency-and-compilation-improvements.patch
  patch -p1 <../0024-winepulse-API-Compatibility-with-1.5.2-onward-v2.patch
  patch -p1 <../0025-winepulse-Fix-low-latency-support.patch
  patch -p1 <../0026-winepulse-drop-realtime-priority-before-thread-destr.patch
  patch -p1 <../0027-winepulse-remove-bogus-SetEvent-from-pulse_started_c.patch
  patch -p1 <../0028-winepulse-disable-the-setevent-part-of-the-latency-h.patch
  patch -p1 <../0029-winepulse-v20-fix-the-checks-in-IsFormatSupported.patch
  patch -p1 <../0030-winepulse-fixup-IsFormatSupported-calls.patch
  patch -p1 <../0031-winepulse-v21-return-early-if-padding-didn-t-update.patch
  patch -p1 <../0032-winepulse-fix-unneeded-free-in-write.patch
  patch -p1 <../0033-winepulse-v23-fixup-a-invalid-free-in-mmdevapi.patch
  patch -p1 <../0034-winepulse-use-a-pi-mutex-for-serialization.patch
  patch -p1 <../0035-winepulse-add-support-for-IMarshal.patch
  patch -p1 <../0036-quartz-tests-Add-tests-for-IVMRMonitorConfig-and-IVMRM.patch
  patch -p1 <../0037-quartz-Workaround-Silverlight-problems-when-multiple-m.patch
  patch -p1 <../0038-patch-list.patch

  autoreconf

  cd "$srcdir"

  if [[ $CARCH == x86_64 ]]; then

    msg2 "Building Wine-64..."
    mkdir $pkgname-64-build
    cd "$srcdir/$pkgname-64-build"
    ../$_upname/configure \
      --prefix=/$_prefix \
      --sysconfdir=/$_sysconf \
      --libdir=/$_prefix/lib \
      --with-x \
      --with-xattr \
      --without-gstreamer \
      --enable-win64
    # Gstreamer was disabled for FS#33655
    make depend
    make

    _wine32opts=(
      --libdir=/$_prefix/lib32
      --with-wine64="$srcdir/$pkgname-64-build"
    )

    export PKG_CONFIG_PATH="/$_prefix/lib32/pkgconfig"
  fi

  msg2 "Building Wine-32..."
  cd "$srcdir/$pkgname-32-build"
  ../$_upname/configure \
    --prefix=/$_prefix \
    --sysconfdir=/$_sysconf \
    --with-x \
    --with-xattr \
    --without-gstreamer \
    "${_wine32opts[@]}"

  # These additional flags solve FS#23277
  make depend CFLAGS+="-mstackrealign -mincoming-stack-boundary=2" CXXFLAGS+="-mstackrealign -mincoming-stack-boundary=2"
  make CFLAGS+="-mstackrealign -mincoming-stack-boundary=2" CXXFLAGS+="-mstackrealign -mincoming-stack-boundary=2"
}

package() {
  msg2 "Packaging Wine-32..."
  cd "$srcdir/$pkgname-32-build"

  if [[ $CARCH == i686 ]]; then
    make prefix="$pkgdir/$_prefix" install
  else
    make prefix="$pkgdir/$_prefix" \
      libdir="$pkgdir/$_prefix/lib32" \
      dlldir="$pkgdir/$_prefix/lib32/wine" install

    msg2 "Packaging Wine-64..."
    cd "$srcdir/$pkgname-64-build"
    make prefix="$pkgdir/$_prefix" \
      libdir="$pkgdir/$_prefix/lib" \
      dlldir="$pkgdir/$_prefix/lib/wine" install
  fi

  # Font aliasing settings for Win32 applications
if [[ $customprefix != 1 ]]; then
  install -d "$pkgdir"/etc/fonts/conf.{avail,d}
  install -m644 "$srcdir/30-win32-aliases.conf" "$pkgdir/etc/fonts/conf.avail"
  ln -s ../conf.avail/30-win32-aliases.conf "$pkgdir/etc/fonts/conf.d/30-win32-aliases.conf"
fi

}
